<?xml version="1.0" encoding="utf-8" ?>
<ContentView  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalimuCare.DataTemplates.LabelWithIcon">
    <ContentView.Content>

        <Grid ColumnDefinitions="0.15*,0.85*" RowDefinitions="*,*" x:Name="label"  x:Uid="label" ColumnSpacing="1" Padding="0">
            
            <Image Source="" 
                   x:Name="imgCustomImage" 
                   Grid.Column="0" 
                   Grid.Row="0" 
                   HeightRequest="15"  
                   WidthRequest="15" 
                   Aspect="AspectFit"/>
            
            <Label Text="" 
                   x:Name="lblCustomLabel" 
                   Grid.Column="1" 
                   Grid.RowSpan="2" 
                   VerticalTextAlignment="Start" 
                   HorizontalTextAlignment="Start" 
                   Style="{StaticResource MedBookLabelNormal}"
                   HorizontalOptions="StartAndExpand"
                   LineBreakMode="CharacterWrap"
                   />
        </Grid>
    </ContentView.Content>
</ContentView>