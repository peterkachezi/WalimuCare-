                        <Image
                            HeightRequest="70"
                            HorizontalOptions="CenterAndExpand"
                            Source="success2"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                    <StackLayout Padding="10">

                        <!--<Label
                            HorizontalOptions="CenterAndExpand"
                            Style="{StaticResource MedBookLabel}"
