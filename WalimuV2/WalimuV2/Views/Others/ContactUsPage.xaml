<?xml version="1.0" encoding="utf-8" ?>
<customrenderer:CustomContentPageRenderer
    xmlns:customrenderer="clr-namespace:WalimuV2.CustomRenderer"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:templates="clr-namespace:WalimuV2.DataTemplates" 
    xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
    x:Class="WalimuV2.Views.Others.ContactUsPage">

    <Shell.TitleView>
        <StackLayout
            BackgroundColor="{StaticResource Primary}"
            HorizontalOptions="FillAndExpand"
            Spacing="0"
            VerticalOptions="FillAndExpand">
            <Label
                Margin="0"
                Padding="0"
                FontSize="20"
                HorizontalOptions="StartAndExpand"
                Style="{StaticResource MedBookLabel}"
                Text="{Binding PageTitle}"
                TextColor="White"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center" />
            <Label
                Margin="0,-15,0,0"
                Padding="0"
                FontSize="Micro"
                HorizontalOptions="StartAndExpand"
                Style="{StaticResource MedBookLabelNormal}"
                Text="{Binding PageSubTitle}"
                TextColor="White"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center" />
        </StackLayout>
    </Shell.TitleView>



    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MyBoxView" TargetType="BoxView">
                <Setter Property="Margin" Value="60,0,15,0" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="HeightRequest" Value="1" />
                <Setter Property="BackgroundColor" Value="{x:StaticResource PrimaryLight3}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>

            <StackLayout
                Margin="0,10,0,0"
                Padding="10"
                HorizontalOptions="StartAndExpand"
                Spacing="15"
                VerticalOptions="StartAndExpand">

                <StackLayout
                    Margin="10,0,10,0"
                    HeightRequest="200"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <maps:Map
                        x:Name="map"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand" />

                </StackLayout>

                <templates:LabelWithIcon
                    x:Name="txtOtherPhoneNumber"
                    CustomText="1528"
                    FontSize="20"
                    ImageSize="20"
                    ImageUrl="phoneIcon"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="StartAndExpand">
                    <templates:LabelWithIcon.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OtherPhoneNumber_Tapped" />
                    </templates:LabelWithIcon.GestureRecognizers>

                </templates:LabelWithIcon>
                
                <BoxView Style="{StaticResource MyBoxView}" />


                <templates:LabelWithIcon
                    x:Name="txtPhoneNumber"
                    CustomText="+254 730 604 000"
                    FontSize="20"
                    ImageSize="20"
                    ImageUrl="phoneIcon"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="StartAndExpand">
                    <templates:LabelWithIcon.GestureRecognizers>
                        <TapGestureRecognizer Tapped="PhoneNumber_Tapped" />
                    </templates:LabelWithIcon.GestureRecognizers>

                </templates:LabelWithIcon>
                
                <BoxView Style="{StaticResource MyBoxView}" />


                <templates:LabelWithIcon
                    x:Name="txtWhatsapp"
                    CustomText="+254 781 704 000(Ask Linda)"
                    FontSize="20"
                    ImageSize="20"
                    ImageUrl="whatsappIcon"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="StartAndExpand">

                    <templates:LabelWithIcon.GestureRecognizers>
                        <TapGestureRecognizer Tapped="whatsappNumber_Tapped" />
                    </templates:LabelWithIcon.GestureRecognizers>

                </templates:LabelWithIcon>


                <BoxView Style="{StaticResource MyBoxView}" />



                <templates:LabelWithIcon
                    x:Name="txtEmail"
                    CustomText="mmc.customerservice@minet.co.ke "
                    FontSize="20"
                    ImageSize="20"
                    ImageUrl="emailicon"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="StartAndExpand">

                    <templates:LabelWithIcon.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Email_Tapped" />
                    </templates:LabelWithIcon.GestureRecognizers>

                </templates:LabelWithIcon>


                <BoxView Style="{StaticResource MyBoxView}" />

                <templates:LabelWithIcon
                    x:Name="txtWebsite"
                    CustomText="www.minet.com/kenya"
                    FontSize="20"
                    ImageSize="20"
                    ImageUrl="website"
                    TextColor="{StaticResource Primary}"
