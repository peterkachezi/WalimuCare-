<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalimuV2.Views.Profile.FileUploadPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="File Upload" FontSize="Large" />
            <Button x:Name="btnFileUpload"
                    Text="Pick and Upload"
                    FontSize="Large"
                    Clicked="FileUpload_Clicked">
            </Button>

            <Label Text="File Upload"
                   FontSize="Large" 
                   TextColor="Green"
                   FontAttributes="Bold"
                   x:Name="lblStatus"/>

            <Button x:Name="btnGetImage"
                    Text="Pick and Upload"
                    FontSize="Large"
                    Clicked="GetFileClick">
            </Button>

            <Image x:Name="img" WidthRequest="150" HeightRequest="150"></Image>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>